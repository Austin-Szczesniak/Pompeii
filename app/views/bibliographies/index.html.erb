<div class="container">

<h1>Listing Bibliographies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cited work</th>
      <th>Volume</th>
      <th>Page</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bibliographies.each do |bibliography| %>
      <tr>
        <td><%= bibliography.cited_work %></td>
        <td><%= bibliography.volume %></td>
        <td><%= bibliography.page %></td>
        <td><%= bibliography.comment %></td>
        <td><%= link_to 'Show', feature_bibliography_path(@feature, bibliography), class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_feature_bibliography_path(@feature, bibliography), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', feature_bibliography_path(@feature, bibliography), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Back to Feature Sheet", feature_path(@feature), class: "btn btn-primary" %>
<%= link_to 'Add Bibliography', new_feature_bibliography_path(@feature), class: "btn btn-success" %>
</div>
