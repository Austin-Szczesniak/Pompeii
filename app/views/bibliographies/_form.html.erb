<%= simple_form_for([@feature,@bibliography]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cited_work, collection: Citation.all_citations %>
    <%= f.input :volume %>
    <%= f.input :page %>
    <%= f.input :comment %>
    <%= f.hidden_field :feature_id, value: @feature.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-warning" %>
  </div>
<% end %>
